{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Nest: Start dev",
      "type": "shell",
      "command": "pnpm run start:dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Nest: Build",
      "type": "shell",
      "command": "pnpm run build",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Nest: Lint",
      "type": "shell",
      "command": "pnpm run lint",
      "group": "test"
    },
    {
      "label": "Nest: Test",
      "type": "shell",
      "command": "pnpm run test",
      "group": "test"
    },
    {
      "label": "Nest: Test watch",
      "type": "shell",
      "command": "pnpm run test:watch",
      "group": "test"
    },
    {
      "label": "Nest: Test e2e",
      "type": "shell",
      "command": "pnpm run test:e2e",
      "group": "test"
    }
  ]
}
